{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "pnpm-lock.yaml",
        "**/env.*local",
        "**/tsconfig*.json",
        "internal/node-utils/*.json",
        "internal/node-utils/src/**/*.ts"
    ],
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "dist.zip"]
        },
        "preview": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build:analyze": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "stub": {
            "cache": false
        },
        "dev": {
            "dependsOn": [],
            "outputs": [],
            "cache": false,
            "persistent": true
        },
        "typecheck": {
            "outputs": []
        }
    }
}
